@using SchoolWebApp.DTO
@model StudentDTO
<form asp-action="Update">
	<div class="form-group">
		<label asp-for="@Model.FirstName"></label>
		<input type="text" asp-for="@Model.FirstName" class="form-control" />
	</div>
	<div class="form-group">
		<label asp-for="@Model.LastName"></label>
		<input type="text" asp-for="@Model.LastName" class="form-control" />
	</div>
	<div class="form-group">
		<label asp-for="@Model.DateOfBirth"></label>
		<input type="date" asp-for="@Model.DateOfBirth" class="form-control" />
	</div>
	<input type="submit" class="btn btn-success" value="Update" />
</form>